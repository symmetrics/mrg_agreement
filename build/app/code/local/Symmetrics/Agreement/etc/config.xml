<config>
	<modules>
		<Symmetrics_Agreement>
			<version>0.0.1</version>
			<depends />
		</Symmetrics_Agreement>
	</modules>
	<global>
		<models>
			<checkout>
				<rewrite>
					<agreement>Symmetrics_Agreement_Model_Agreement</agreement>
				</rewrite>
			</checkout>
		</models>
		<blocks>
            <checkout>
                <rewrite>
                    <agreements>Symmetrics_Agreement_Block_Agreement</agreements>
                </rewrite>
            </checkout>
		</blocks>
		<events>
            <controller_action_layout_render_before_checkout_onepage_index>
                <observers>
                    <symmetrics_agreement_model_observer>
                        <type>singleton</type>
                        <class>Symmetrics_Agreement_Model_Observer</class>
                        <method>setTheme</method>
                    </symmetrics_agreement_model_observer>
                </observers>
            </controller_action_layout_render_before_checkout_onepage_index>
        </events>
    </global>
</config>